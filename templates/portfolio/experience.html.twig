{% extends 'base.html.twig' %}

{% block body %}
  <section class="section">
    <div class="container-shell">
      <div class="section-subtitle">{{ 'nav.experience'|trans }}</div>
      <h1 class="section-title">{{ 'section.experience'|trans }}</h1>

      <div class="mt-8 grid gap-6">
        {% for experience in experiences %}
          <div class="card" data-reveal>
            <div class="flex flex-col gap-2 md:flex-row md:items-start md:justify-between">
              <div>
                <h3 class="text-xl font-semibold text-ink">{{ localized(experience, 'role', app.request.locale) }}</h3>
                <div class="text-sm text-muted">{{ localized(experience, 'company', app.request.locale) }}</div>
                {% if localized(experience, 'location', app.request.locale) %}
                  <div class="text-xs uppercase tracking-[0.2em] text-slate-400">{{ localized(experience, 'location', app.request.locale) }}</div>
                {% endif %}
              </div>
              <div class="text-sm text-slate-500">
                {% set start = experience.startDate|format_datetime(locale=app.request.locale, pattern='MMM yyyy') %}
                {% if experience.isCurrent %}
                  {{ start }} — {{ 'ui.present'|trans }}
                {% elseif experience.endDate %}
                  {% set end = experience.endDate|format_datetime(locale=app.request.locale, pattern='MMM yyyy') %}
                  {{ start }} — {{ end }}
                {% else %}
                  {{ start }}
                {% endif %}
              </div>
            </div>
            <p class="mt-4 text-sm text-muted">{{ localized(experience, 'description', app.request.locale) }}</p>
          </div>
        {% else %}
          <div class="card">{{ 'ui.empty_experience'|trans }}</div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
