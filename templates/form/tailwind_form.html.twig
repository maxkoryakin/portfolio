{% use "form_div_layout.html.twig" %}

{% block form_row %}
  <div class="space-y-2">
    {{ form_label(form, null, {label_attr: {class: 'form-field-label'}}) }}
    {{ form_widget(form, {attr: {class: 'form-field-input'}}) }}
    {{ form_errors(form) }}
  </div>
{% endblock %}

{% block form_errors %}
  {% if errors|length > 0 %}
    <div class="text-sm text-red-600">
      {% for error in errors %}
        <div>{{ error.message }}</div>
      {% endfor %}
    </div>
  {% endif %}
{% endblock %}

{% block textarea_widget %}
  {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-field-input min-h-[140px]')|trim}) %}
  {{ parent() }}
{% endblock %}
